@model FinalProject.Models.Login

@{
    ViewData["Title"] = "Login";
}

@if(TempData["AlertMessage"]!=null)
{
   <div class="alert alert-success" id="divexample">
       <strong>! @TempData["AlertMessage"]</strong>
   </div>
}
<div class="text-center">
    <h1 class="display-4">E-Learning-System</h1>
    
</div>

    <script>
        function hidediv(){
            document.getElementById("divexample").style.visibility="hidden";
        }
        setTimeout("hidediv()",4000);
    </script>
<h1>Login</h1>
<hr />
<div class ="container">
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</div>

