@model FinalProject.Models.ChatModel

@{
    ViewData["Title"] = "Chat";
}
@if(TempData["AlertMessage"]!=null)
{
   <div class="alert alert-success" id="divexample">
       <strong>! @TempData["AlertMessage"]</strong>
   </div>
}
<div class="text-center">
    <h1 class="display-4">E-Learning-System</h1>
    
</div>

    <script>
        function hidediv(){
            document.getElementById("divexample").style.visibility="hidden";
        }
        setTimeout("hidediv()",3000);
    </script>
<h2>Send Massege</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Chat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="sender" class="control-label"></label>
                <input asp-for="sender" class="form-control" placeholder="email@gmail.com"/>
                <span asp-validation-for="sender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="message" class="control-label"></label>
                <input asp-for="message" class="form-control" placeholder="Optional"/>
                <span asp-validation-for="message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="receiver" class="control-label"></label>
                <input asp-for="receiver" class="form-control" placeholder="email@gmail.com"/>
                <span asp-validation-for="receiver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



